@model IEnumerable<STMIS.Models.SubjectTable>

@{
    ViewData["Title"] = "Index";
}

<!-- Bordered Table -->
<div class="card">
    <h5 class="card-header">SUBJECTS</h5>


    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table ">
                <thead>
                    <tr>
                        <th>
                            <p>
                                <a asp-action="Create">Create New</a>
                            </p>
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button"
                                        class="btn p-0 dropdown-toggle hide-arrow"
                                        data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.SubjectId"> <i class="bx bx-edit-alt me-1"></i>Edit</a>
                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@item.SubjectId"><i class="bx bx-trash me-1"></i>Details</a>
                                        @*                                    <a asp-action="Details" asp-route-id="@item.ClassId">Details</a> |
                                    *@
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />